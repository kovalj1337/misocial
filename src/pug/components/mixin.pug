mixin card(oneCard)
    figure.card-figure
        figcaption
            picture
                img(src=oneCard.img, alt=oneCard.alt class="img")
            p.personal #{oneCard.personal}
            p.price
                span.curency #{oneCard.curency}
                b #{oneCard.price}
                if oneCard.isMonth
                    | /month
                else
                    | /year
            ul.description 
                for oneText in oneCard.description 
                    li #{oneText}
            a(href=oneCard.href) #{oneCard.btnText}  